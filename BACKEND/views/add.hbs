<h1>This is where you can add inventory of your choice {{this.add}}</h1>

<form data-id="{{this.add}}" class="update-form">

  <div class="form-group">
    <label for="add">Add:</label>
    <input type="checkbox" id="add" name="add" value="{{this.add}}">
  </div>

  <div class="form-group">
    <label for="add">Add Inventory:</label>
    <textarea id="add" name="add" rows="8" cols="40">{{this.add}}</textarea>
  </div>

  <button type="submit">Add Inventory</button>
</form>
